{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["dom", "es2015", "es2017"],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react"
    },
    "include": ["./src/**/*"]
}
